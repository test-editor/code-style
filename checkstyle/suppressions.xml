<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://checkstyle.sourceforge.net/dtds/suppressions_1_1.dtd">

<suppressions>

    <!-- Tone down the checking for test code -->
    <suppress checks="Javadoc" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="AvoidStaticImport" files=".*[\\/]src[\\/]test[\\/]"/>
    <suppress checks="WriteTag" files=".*[\\/]src[\\/]test[\\/]"/>

    <!-- Do not check Java code generated from Xtend sources,
         or by Xtext, in general. -->
    <suppress checks=".*" files=".*[\\/]xtend-gen[\\/]"/>
    <suppress checks=".*" files=".*[\\/]build[\\/]xtend[\\/]"/>
    <suppress checks=".*" files=".*[\\/]xtext-gen[\\/]"/>
</suppressions>

